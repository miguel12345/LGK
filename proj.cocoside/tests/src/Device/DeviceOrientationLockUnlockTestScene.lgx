		<Button name="lockPortrait" marginTop="20" onClick="lockPortrait" fontSize="70" text="Lock orientation to portrait"></Button>
		<Button name="unlock" marginTop="20" onClick="unlockDeviceOrientation"  fontSize="70" text="Unlock device orientation"></Button>
	</Layout>
</Layout>